<div class="articleLink">
  <p>
    <%= article.meta.section %> | <%= new Intl.DateTimeFormat('en-US', {
    dateStyle: 'medium', timeZone: 'UTC'}).format(article.meta.created) %>
  </p>
  <h3>
    <a href="/articles/<%= article.slug %>"><%= article.meta.title %></a>
  </h3>
  <p>
    <i
      ><a href="/authors/<%= article.author.slug %>"
        ><%= article.author.name %></a
      ></i
    >
  </p>
  <p><%= article.meta.exerpt %></p>
  <img src="/<%= article.meta.image %>" alt="<%= article.meta.title %>" />
  <p><a href="/articles/<%= article.slug %>">Read More</a></p>
  <hr />
</div>
